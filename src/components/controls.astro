---
interface Props {
    prev: string,
    next: string,
    currentPage: number
}

const {prev, next, currentPage} = Astro.props;
---

<div class="btnControls">
    <a href={prev} class="btnBack"><img src="/btnIcons/BackIcon.png" alt="The Icon to Back Button" width="20px" height="20px"></a>
    <p>{currentPage}</p>
    <a href={next} class="btnNext"><img src="/btnIcons/NextIcon.png" alt="The Icon to Back Button" width="20px" height="20px"></a>
</div>

<style>
    .btnControls{
        margin: 1.5em 0rem;
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
        gap: 5rem;
    }

    .btnControls p{
        font-size: 1.5em;
        color: white;
    }

    .btnControls a{
        text-align: center;
        width: 20px;
        height: 20px;
        scale: 2;
        background-color: white;
        border-radius: 150px;
        user-select: none;
    }

    .btnControls a img {
        transition: scale 0.3s;
    }

    .btnControls a:hover img{
        cursor: pointer;
        scale: 1.29;
    }
</style>